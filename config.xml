<?xml version='1.0' encoding='utf-8'?>
<widget id="c4c.healthexpert.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Health Assessment</name>
    <description>
        Click4Care medical assessment application for general practitioners
    </description>
    <author email="info@click4care.ie" href="http://click4care.ie">
        Click4Care Team
    </author>
    <content src="client.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    
    <access origin="*" />
 
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <allow-navigation href="http://*/*" />
	<allow-navigation href="https://*/*" />
	<allow-navigation href="data:*" />    
	
    <platform name="android">
        <allow-intent href="market:*" />
		
		<preference name="Fullscreen" value="true" />    
		<preference name="KeepRunning" value="false"/>
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
</widget>
